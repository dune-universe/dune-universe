(* -*- tuareg -*- *)

let preprocess =
  match Sys.getenv "BISECT_ENABLE" with
  | "yes" -> "(preprocess (pps bisect_ppx))"
  | _ -> ""
  | exception Not_found -> ""

let () = Jbuild_plugin.V1.send @@ {|
(library
 (flags     (-w "+a-4-9-29-37-40-42-44-48-50-32-30"))
 (name daypack_lib)
 (public_name daypack-lib)
 (libraries unix
            ptime
            oseq
            biniou
            yojson
            atdgen-runtime
            containers
            re
 )
|}
^ preprocess ^
{| ) |}
^
{|
