opam-version: "2.0"
maintainer: "ligand@free.fr"
authors: ["Francois BERENGER"]
synopsis: "OCaml wrapper to SVM R packages e1071 and svmpath"
homepage: "https://github.com/UnixJunkie/orsvm-e1071"
bug-reports: "https://github.com/UnixJunkie/orsvm-e1071/issues"
dev-repo: "git+https://github.com/UnixJunkie/orsvm-e1071.git"
license: "LGPL + linking exception"
build: [
  ["R" "CMD" "BATCH" "files/install_e1071.r"]
  ["R" "CMD" "BATCH" "files/install_svmpath.r"]
  ["jbuilder" "build" "-p" name "-j" jobs]
]
depends: [
  "dune" {build}
  "conf-r"
  "dolog" {with-test}
  "batteries" {with-test}
  "cpm" {with-test}
  "minicli" {with-test}
  "parmap" {with-test}
]
post-messages: [
"Please interact with R to install needed things in user-space:\n
R\n
install.packages('e1071', repos='http://cran.r-project.org')\n
install.packages('svmpath', repos='http://cran.r-project.org')\n" {failure}
]
