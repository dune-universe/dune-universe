(documentation
 (package easy_logging)
 (mld_files :standard))

(rule
 (targets examples.mld)
 (action (with-stdout-to examples.mld
                         (progn
                           (echo "{1 Examples}\n{[")
                           (cat examples/logging_examples.ml)
                           (echo "]}")
                           )))
 )
         
(library
 (name easy_logging)
 (public_name easy_logging)
 (flags -w)
 (libraries
  unix
  )
 )

