#!/bin/sh

# $FreeBSD$
#
# PROVIDE: builder
# REQUIRE: LOGIN
# KEYWORD: shutdown
#
# Define these builder_* variables in one of these files
# 	 /etc/rc.conf
#	 /etc/rc.conf.local
#	 /etc/rc.conf.d/builder
#	 /usr/local/etc/rc.conf.d/builder
#
# builder_flags:
#                       Default: ""
#

. /etc/rc.subr

name=builder
rcvar=${name}_enable
desc="Builder web service"
load_rc_config $name
start_cmd="builder_start"

: ${builder_enable:="NO"}
: ${builder_flags:=""}
: ${builder_user:="builder"}

pidfile="/var/run/builder.pid"
procname="/usr/local/libexec/builder-server"

builder_start () {
    echo "Starting ${name}."
    /usr/sbin/daemon -S -p "${pidfile}" -u "${builder_user}" \
		     "${procname}" ${builder_flags}
}

run_rc_command "$1"
