(package
 (name override)
 (synopsis "PPX extension for overriding modules")
 (description "\
PPX extensions [%%override], [%%import], [%%include] and [%%rewrite] to import
and change module interfaces.
")
 (depends
  (dune (>= 1.10.0))
  (ppxlib (>= 0.6.0))
  (stdcompat (>= 9))
  (ppx_show (>= 0.1.0))
  (ppx_compare (>= v0.12.0))
  (cppo (>= 1.6.4))))
