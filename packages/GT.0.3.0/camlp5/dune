(env
  (dev
    (flags (:standard -warn-error -A -w -27-9))))

(library
 (name pa_gt)
 (public_name GT-p5)
 (modules Camlp5Helpers extension core2)
 (libraries camlp5 GT.common)
 (preprocess
     (action (run %{workspace_root}/camlp5/pp5+dump.byte %{input-file})))
 (flags (:standard -warn-error -A -rectypes))

