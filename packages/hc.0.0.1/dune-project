(package
 (name hc)
 (synopsis "Hashconsing library")
 (description
   "hc is an OCaml library for hashconsing. It provides easy ways to use hashconsing, in a type-safe and modular way and the ability to get forgetful memoïzation.")
 (depends
  (ocaml
   (>= 4.05.0))
  (dune
   (>= 1.11.0))
  (bisect_ppx
   (>= 1.4.1))))
